# 服务器配置
NODE_ENV=development
PORT=3000

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=129club
DB_USER=root
DB_PASSWORD=your_password

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT配置
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# 微信小程序配置
WX_APPID=your_wx_appid
WX_SECRET=your_wx_secret

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# OSS配置（可选，使用云存储）
OSS_REGION=oss-cn-hangzhou
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_BUCKET=

# WebSocket配置
WS_PORT=3001

# 日志配置
LOG_LEVEL=info
LOG_DIR=./logs

# CORS配置
CORS_ORIGIN=*

# 讯飞星火AI配置
# 获取API Key: https://console.xfyun.cn/services/bm35
# 支持模型: generalv3.5, generalv3, general
XFYUN_API_KEY=your_xfyun_api_key_here
XFYUN_MODEL=generalv3.5
